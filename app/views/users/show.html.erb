<p id="notice"><%= notice %></p>
<%= gravatar_for @user %>
<p>
  <strong><%= t ".name" %></strong>
  <%= @user.name %>
</p>
<p>
  <strong><%= t ".email" %></strong>
  <%= @user.email %>
</p>
<%= link_to t(".edit"), edit_user_path(@user) %> |
<%= link_to t(".back"), users_path %>
<div>
  <%= link_to t(".mark"), user_bookmark_user_path(@user) %>
</div>
<div class="col-md-8">
  <% if @user.posts.any? %>
    <h3><%= t ".post" %> (<%= @user.posts.count %>)</h3>
    <ol>
      <%= render @posts %>
    </ol>
  <% end %>
</div>

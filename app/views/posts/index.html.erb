<p id="notice"><%= notice %></p>
<h1><%= t ".post" %></h1>
<table>
  <thead>
    <tr>
      <th><%= t ".caption" %></th>
      <th><%= t ".user" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.caption %></td>
        <td><%= post.user.name %></td>
        <td><%= link_to t(".show"), post %></td>
        <td><%= link_to t(".edit"), edit_post_path(post) %></td>
        <td><%= link_to t(".destroy"), post, method: :delete, data: { confirm: t(".confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to t(".new_post"), new_post_path %>
